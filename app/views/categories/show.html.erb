<h1><%= @category.name %></h1>

  <% unless @products == [] %>
    <% @products.each do |product| %>
        <p><%= product.name %></p>
        <%= link_to (image_tag product.image, width: "300"), product_path(product.id) %>
    <% end %>
  <% else %>
  <p><%= "Sorry, no amazing products here! :(" %></p>
  <% end %>
